<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal"
        android:layout_height="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/reply_item_tweet"
                android:background="?attr/selectableItemBackground"
                android:paddingRight="5dp"
                android:src="@drawable/ic_twitter_reply_outline"/>
            <TextView
                android:layout_toRightOf="@+id/reply_item_tweet"
                android:id="@+id/reply_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingRight="5dp"
                android:id="@+id/retweet_item_tweet"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_twitter_retweet"/>
            <TextView
                android:layout_toRightOf="@+id/retweet_item_tweet"
                android:id="@+id/retweet_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingRight="5dp"
                android:id="@+id/like_item_tweet"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_twitter_like_outline"/>
            <TextView
                android:layout_toRightOf="@+id/like_item_tweet"
                android:id="@+id/like_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:id="@+id/message_item_tweet"
                android:src="@drawable/ic_twitter_message"/>
        </RelativeLayout>
    </LinearLayout>
</layout>


